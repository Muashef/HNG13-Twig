{% extends "base.html.twig" %}

{% block title %}Login - Ticket Management{% endblock %}

{% block content %}
<main class="min-h-screen flex items-center justify-center px-4 py-12">
    <div class="w-full max-w-md">
        <div class="bg-slate-800 rounded-lg border border-slate-700 p-8 shadow-2xl">
            {# <a
            href="/"
            className="text-2xl font-bold bg-linear-to-r from-cyan-400 to-blue-500 bg-clip-text text-transparent mb-8 block"
          >
            TicketZen
          </a> #}
            <h1 class="text-3xl font-bold mb-2 text-center">Welcome Back</h1>
            <p class="text-slate-400 text-center mb-8">Sign in to your account</p>

            <form id="loginForm" class="space-y-6">
                <div>
                    <label class="block text-sm font-medium mb-2">Email</label>
                    <input 
                        type="email" 
                        id="email" 
                        name="email"
                        class="w-full px-4 py-3 bg-slate-700/50 border border-slate-600 rounded-lg text-white placeholder-slate-500 focus:outline-none focus:border-cyan-500 transition"
                        placeholder="you@example.com"
                        required
                    >
                    <span class="error-message text-red-500 text-sm mt-1 hidden"></span>
                </div>

                <div>
                    <label class="block text-sm font-medium mb-2">Password</label>
                    <input 
                        type="password" 
                        id="password" 
                        name="password"
                        class="w-full px-4 py-3 bg-slate-700/50 border border-slate-600 rounded-lg text-white placeholder-slate-500 focus:outline-none focus:border-cyan-500 transition"
                        placeholder="••••••••"
                        required
                    >
                    <span class="error-message text-red-500 text-sm mt-1 hidden"></span>
                </div>

                <button 
                    type="submit"
                    class="w-full py-3 bg-gradient-to-r from-cyan-500 to-blue-600 hover:from-cyan-600 hover:to-blue-700 rounded-lg font-semibold transition"
                >
                    Sign In
                </button>
            </form>

            <p class="text-center text-slate-400 mt-6">
                Don't have an account? 
                <a href="/twig/public/signup" class="text-cyan-400 hover:text-cyan-300 font-semibold">Sign up</a>
            </p>
        </div>
    </div>
</main>

<script>
function validateEmail(email) {
    const re = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
    return re.test(email);
}

function validatePassword(password) {
    return password.length >= 6;
}

function getUsers() {
    return JSON.parse(localStorage.getItem('users')) || [];
}

function setCurrentUser(user) {
    localStorage.setItem('currentUser', JSON.stringify(user));
}

document.getElementById('loginForm').addEventListener('submit', function(e) {
    e.preventDefault();
    
    const email = document.getElementById('email').value.trim();
    const password = document.getElementById('password').value.trim();

    document.querySelectorAll('.error-message').forEach(el => el.classList.add('hidden'));
    
    const validation = validateEmail(email) && validatePassword(password);
    
    if (!validation) {
        if (!validateEmail(email)) {
            const emailError = document.querySelector('[name="email"]').nextElementSibling;
            emailError.textContent = 'Invalid email';
            emailError.classList.remove('hidden');
        }
        if (!validatePassword(password)) {
            const passError = document.querySelector('[name="password"]').nextElementSibling;
            passError.textContent = 'Password must be at least 6 characters';
            passError.classList.remove('hidden');
        }
        return;
    }
    
    const users = getUsers();
    const user = users.find(u => u.email === email);
    
    if (!user || user.password !== password) {
        alert('Invalid email or password');
        return;
    }
    
    setCurrentUser(user);
    window.location.href = '/twig/public/dashboard';
});
</script>
{% endblock %}
